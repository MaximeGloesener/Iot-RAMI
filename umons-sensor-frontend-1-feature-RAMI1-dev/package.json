{
  "name": "umons-sensor-front",
  "version": "1.4.0",
  "private": true,
  "scripts": {
    "command": "dotenv -e .env.$VITE_APP_ENV -- npm run $1",
    "dev": "vite --mode $VITE_APP_ENV",
    "build": "run-p type-check build-only",
    "docker:build": "docker build --no-cache -f Dockerfile --build-arg VITE_APP_ENV=$VITE_APP_ENV -t $CI_REGISTRY_IMAGE:$CI_COMMIT_SHA .",
    "docker:build:tag": "docker build --no-cache --build-arg VITE_APP_ENV=$VITE_APP_ENV -t $CI_REGISTRY_IMAGE:$CI_TAG_NAME .",
    "docker:tag": "docker tag $CI_REGISTRY_IMAGE:$CI_COMMIT_SHA $CI_REGISTRY_IMAGE:$CI_TAG_NAME",
    "docker:tag:latest": "docker tag $CI_REGISTRY_IMAGE:$CI_COMMIT_SHA $CI_REGISTRY_IMAGE:latest",
    "docker:login": "echo $CI_REGISTRY_TOKEN | docker login -u $CI_REGISTRY_USER $CI_REGISTRY --password-stdin",
    "docker:push": "docker push $CI_REGISTRY_IMAGE:$CI_COMMIT_SHA",
    "docker:push:tag": "docker push $CI_REGISTRY_IMAGE:$CI_TAG_NAME",
    "docker:push:latest": "docker push $CI_REGISTRY_IMAGE:latest",
    "docker:pull": "docker pull $CI_REGISTRY_IMAGE:$CI_COMMIT_SHA",
    "docker:pull:tag": "docker pull $CI_REGISTRY_IMAGE:$CI_TAG_NAME",
    "docker:pull:latest": "docker pull $CI_REGISTRY_IMAGE:latest",
    "docker:start": "docker run -it --rm -p $VITE_APP_PORT_OUT:$VITE_APP_PORT_IN umons-sensor-front-$VITE_APP_ENV",
    "docker:stop": "docker stop umons-sensor-front-$VITE_APP_ENV",
    "docker:clean": "docker system prune -f",
    "preview": "vite preview",
    "test": "vitest --environment jsdom --root src/ --watch false",
    "test:coverage": "vitest --environment jsdom --root src/ --coverage --watch false",
    "build-only": "vite build --mode $VITE_APP_ENV",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chart.js": "^4.3.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-zoom": "^2.0.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.2.1",
    "mqtt": "^5.7.2",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-chartjs": "^5.3.1",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node20": "^1.0.2",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.3.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-c8": "^0.32.2",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.43.0",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "typescript": "~5.1.0",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "vue-tsc": "^1.8.3"
  }
}
